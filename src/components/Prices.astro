---
const PRICES = [
  {
    name: "Landing Page",
    price: "250.000 - 400.000",
    description: "Diseño y desarrollo de landing page profesional con:",
    features: [
      "Diseño responsivo",
      "Optimización SEO básica",
      "Formulario de contacto",
      "Integración con redes sociales",
      "Hasta 5 secciones"
    ]
  },
  {
    name: "Sistema Web",
    price: "500.000 - 1.000.000",
    description: "Desarrollo de sistema web completo con:",
    features: [
      "Panel de administración",
      "Base de datos",
      "Autenticación de usuarios",
      "Reportes y estadísticas",
      "Soporte técnico"
    ]
  },
  {
    name: "E-commerce",
    price: "800.000 - 1.500.000",
    description: "Tienda online completa con:",
    features: [
      "Catálogo de productos",
      "Sistema de pagos",
      "Gestión de inventario",
      "Panel de administración",
      "Integración con pasarelas de pago"
    ]
  }
];
---

<section id="precios" class="section bg-slate-50 dark:bg-slate-900 overflow-hidden">
  <div class="container">
    <div class="text-center max-w-3xl mx-auto mb-16" data-animate>
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        Nuestros <span class="text-primary-600 dark:text-primary-400">Precios</span>
      </h2>
      <p class="text-lg text-slate-700 dark:text-slate-300">
        Ofrecemos soluciones digitales adaptadas a tus necesidades
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {PRICES.map((plan, index) => (
        <div 
          class="bg-white dark:bg-slate-800 p-6 rounded-xl shadow-md border border-slate-100 dark:border-slate-700 flex flex-col"
          data-animate
          style={`animation-delay: ${index * 150}ms`}
        >
          <div class="mb-4">
            <h3 class="text-2xl font-bold text-primary-600 dark:text-primary-400">{plan.name}</h3>
            <p class="text-3xl font-bold mt-2">{plan.price} CLP</p>
          </div>
          
          <p class="text-slate-600 dark:text-slate-400 mb-4">
            {plan.description}
          </p>
          
          <ul class="space-y-3 mb-6 flex-grow">
            {plan.features.map((feature) => (
              <li class="flex items-center">
                <svg class="w-5 h-5 text-primary-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {feature}
              </li>
            ))}
          </ul>
          
          <button class="w-full bg-primary-600 hover:bg-primary-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors">
            Contactar
          </button>
        </div>
      ))}
    </div>
  </div>
</section> 