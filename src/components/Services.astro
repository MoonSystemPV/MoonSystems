  title: string;
  description: string;
  icon: IconKey;
  color: ColorKey;
  details: {
    pricing: Array<{
      plan: string;
      price: string;
      features: string[];
    }>;
    timeline: string;
    extras: string[];
  };
}

const typedServices: Service[] = SERVICES as Service[];

const colorClasses = {
